dn: olcDatabase={2}mdb,cn=config
changetype: modify
replace: olcRootDN
olcRootDN: cn=admin,dc=trino,dc=testldap,dc=com
-
replace: olcSuffix
olcSuffix: dc=trino,dc=testldap,dc=com
-
replace: olcRootPW
olcRootPW: admin
-
replace: olcAccess
olcAccess: {0}to attrs=userPassword by self write by dn.base="cn=admin,dc=trino,dc=testldap,dc=com" write by anonymous auth by * none
olcAccess: {1}to * by dn.base="cn=admin,dc=trino,dc=testldap,dc=com" write by self write by * read

dn: olcDatabase={1}monitor,cn=config
changetype: modify
replace: olcAccess
olcAccess: {0}to *  by dn.base="gidNumber=0+uidNumber=0,cn=peercred,cn=exter
 nal,cn=auth" read  by dn.base="cn=admin,dc=trino,dc=testldap,dc=com" read  by * n
 one

dn: cn=config
changetype: modify
replace: olcTLSCACertificateFile
olcTLSCACertificateFile: /etc/openldap/certs/openldap-certificate.pem
-
replace: olcTLSCertificateFile
olcTLSCertificateFile: /etc/openldap/certs/openldap-certificate.pem
-
replace: olcTLSCertificateKeyFile
olcTLSCertificateKeyFile: /etc/openldap/certs/private.pem
-
replace: olcTLSVerifyClient
olcTLSVerifyClient: demand
